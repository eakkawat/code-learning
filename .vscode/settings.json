{
  "cssVariables.lookupFiles": [
    "**/*.css",
    "**/*.scss",
    "**/*.sass",
    "**/*.less",
    "node_modules/@mantine/core/styles.css"
  ],
  "eslint.workingDirectories": [
    { "directory": "./frontend", "changeProcessCWD": true, "pattern": ["**/*.ts", "**/*.tsx"] },
    { "directory": "./backend", "changeProcessCWD": true, "pattern": "**/*.ts" }
  ]
}
